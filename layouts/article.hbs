{{#> layout }}

	<article class="article readable-container">

		{{#if this.image}}
			<figure class="article-image">
				<img src="/assets/images/articles/{{ this.image.name }}" alt="{{ this.image.desc }}" />
			</figure>
		{{/if}}

		<p class="article-metadata">
			<span
				class="article-metadata-group has-tooltip has-tooltip-top"
				aria-label="Topics"
			>
				{{> icon name="tags" }}
				{{#if this.topics}}
					{{ this.topics }}
				{{else}}
					No Topics
				{{/if}}
			</span>
			<span
				class="article-metadata-group has-tooltip has-tooltip-top"
				aria-label="{{fullDate this.date }}"
			>
				{{> icon name="time" }}
				{{#if this.date}}
					<time datetime="{{ this.date }}">
						{{date this.date }}
					</time>
				{{else}}
					No Date
				{{/if}}
			</span>
		</p>

		<div class="article-content readable">
			{{{ contents }}}
		</div>

	</article>

	<div class="share readable-container">

		<div
			class="socialshares"
			data-url="{{ site.base_url }}{{ this.url }}"
			data-text="{{ this.title }}"
			data-theme="brand"
		>
			<div class="socialshares-twitter" data-via="sunnysinghio"></div>
			<div class="socialshares-facebook"></div>
			<div class="socialshares-linkedin"></div>
			<div class="socialshares-more"></div>
		</div>

	</div>

	<div
		class="comments readable-container"
		id="comments"
		data-disqus-title="{{ this.title }}"
		data-disqus-url="{{ site.base_url }}{{ this.url }}"
		data-disqus-identifier="{{ this.disqus.identifier }}"
	>

		<noscript>JavaScript must be enabled to view or submit comments.</noscript>

		<button class="btn" data-comments-btn>
			{{> icon name="comments" }}
			Show Comments
		</button>

		<!-- The disqus_thread div is where Disqus loads the comments -->
		<div id="disqus_thread"></div>

	</div>

{{/layout}}
